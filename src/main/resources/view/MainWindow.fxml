<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<fx:root minHeight="600" minWidth="900.0" onCloseRequest="#handleExit" title="AniList" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/ghost.png" />
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@Fonts.css" />
        <URL value="@AnimeTheme.css" />
      </stylesheets>

      <VBox>
        <MenuBar fx:id="menuBar" VBox.vgrow="NEVER">
          <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Exit" />
          </Menu>
        </MenuBar>

              <VBox fx:id="animeList" styleClass="pane-with-border" VBox.vgrow="ALWAYS">
          <padding>
            <Insets bottom="10" left="10" right="10" top="10" />
          </padding>
               <children>
                  <HBox prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                     <children>
                   <StackPane fx:id="animeListPanelPlaceholder" prefHeight="100.0" prefWidth="106.0" HBox.hgrow="ALWAYS" />
                        <VBox prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
                           <children>
                                <StackPane fx:id="resultDisplayPlaceholder" styleClass="pane-with-border" VBox.vgrow="ALWAYS">
                            <padding>
                              <Insets bottom="5" left="10" right="10" top="5" />
                            </padding>
                          </StackPane>
                          <StackPane fx:id="commandBoxPlaceholder" minHeight="30.0" styleClass="pane-with-border">
                            <padding>
                              <Insets bottom="5" left="10" right="10" top="5" />
                            </padding>
                          </StackPane>
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                       <StackPane fx:id="statusbarPlaceholder" VBox.vgrow="NEVER" />
               </children>
        </VBox>
      </VBox>
    </Scene>
  </scene>
</fx:root>
